<Window x:Class="Geophisics.AdminAddCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Geophisics"
        mc:Ignorable="d"
        Title="Добавить заказчика" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Введите ФИО заказчика" />
            <TextBox Text="{Binding Customer.Фио}"/>
            <TextBlock Text="Введите почту" />
            <TextBox Text="{Binding Customer.Почта}"/>
            <TextBlock Text="Введите логин"/>
            <TextBox Text="{Binding Customer.Логин}"/>
            <TextBlock Text="Введите пароль"/>
            <TextBox Text="{Binding Customer.Пароль}"/>
            <Button Content="Сохранить" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
