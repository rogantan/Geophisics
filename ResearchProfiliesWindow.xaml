<Window x:Class="Geophisics.ResearchProfiliesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Geophisics"
        mc:Ignorable="d"
        Title="ResearchProfiliesWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Text="Профили" Grid.Row="0" FontSize="30"/>
        <Button Content="Добавить профиль" Grid.Row="1" Margin="325,0,325,0" />
        <Button Content="Контур площади" Grid.Row="1" Margin="10,0,660,0"/>
        <Button Content="Добавить координату" Grid.Row="1" Margin="165,0,500,0"/>
        <Button Content="Пикеты" Margin="645,0,25,0" Grid.Row="1" Click="Button_Click"/>
        <Button Content="Точки профиля" Margin="495,0,175,0" Grid.Row="1"/>
        <ListView Grid.Row="2" x:Name="PROFILI">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Направление" DisplayMemberBinding="{Binding Направление}"/>
                    <GridViewColumn Header="Длина" DisplayMemberBinding="{Binding Длина}"/>
                </GridView>
            </ListView.View>
        </ListView>
        
    </Grid>
</Window>
