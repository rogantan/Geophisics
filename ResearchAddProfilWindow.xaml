<Window x:Class="Geophisics.ResearchAddProfilWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Geophisics"
        mc:Ignorable="d"
        Title="ResearchAddProfilWindow" Height="150" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Введите направление"/>
            <TextBox x:Name="napr" Text="{Binding Profil.Направление}"/>
            <TextBlock Text="Введите длину"/>
            <TextBox x:Name="dlin" Text="{Binding Profil.Длина}"/>
            <Button Content="Сохранить" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
