<Window x:Class="Geophisics.ResearchAddEquipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Geophisics"
        mc:Ignorable="d"
        Title="ResearchAddEquipmentWindow" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Введите название"/>
            <TextBox Text="{Binding Equipment.Название}"/>
            <TextBlock Text="Выберите дату последней калибровки" />
            <DatePicker x:Name="date"/>
            <Button Content="Сохранить" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
