<Window x:Class="Geophisics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Geophisics"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#D1D6D7">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Администратор" Grid.Row="0" FontSize="30"/>
        <Button Grid.Row="1" Width="150" Height="100" Margin="220,143,430,0" Content="Заказчики" BorderBrush="Transparent" Grid.RowSpan="2" Click="Button_Click_1"/>
        <Button Grid.Row="1" Width="150" Height="100" Margin="20,142,630,0" Content="Проекты" Click="Button_Click" BorderBrush="Transparent" Grid.RowSpan="2"/>
        <Button Grid.Row="1" Width="150" Height="100" Margin="410,142,240,0" Content="Исследователи" BorderBrush="Transparent" Grid.RowSpan="2" Click="Button_Click_2"/>
        <Button Grid.Row="1" Width="150" Height="100" Margin="610,142,40,0" Content="Геофизики" BorderBrush="Transparent" Grid.RowSpan="2" Click="Button_Click_3"/>
    </Grid>
</Window>
