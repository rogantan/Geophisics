<Window x:Class="Geophisics.ResearchAddTochkaPlozh"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Geophisics"
        mc:Ignorable="d"
        Title="ResearchAddTochkaPlozh" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Введите координату X"/>
            <TextBox x:Name="x" Text="{Binding Tochka.X}"/>
            <TextBlock Text="Введите координату Y"/>
            <TextBox x:Name="y" Text="{Binding Tochka.Y}"/>
            <Button Content="Сохранить" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
